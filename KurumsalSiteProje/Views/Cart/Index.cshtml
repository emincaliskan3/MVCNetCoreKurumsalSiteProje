@model Cart
@{
    ViewData["Title"] = "Sepetim";
}

<h1>Sepetim</h1>

<div id="cart" class="container" >
    <div class="row">
<div class="com-md-8">
    <div class="table-responsive">
        <table class="table table-hover">
              <tr>
                        <th></th>
                        <th>Ürün</th>
                        <th>Fiyat</th>
                        <th>Miktar</th>
                        <th>Toplam</th>
                        <th></th>
              </tr>
              <tbody>
                       @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    <img src="/Images/@item.Product.Image" alt="" height="34" />
                                </td>
                                <td>
                                    <a href="/Products/Detail/@item.Product.Id">
                                    @item.Product.Name
                                    </a>
                                </td>
                                <td>@item.Product.Price</td>
                                <td>@item.Quantity</td>
                                <td>@((item.Quantity * item.Product.Price).ToString("C"))</td>
                                <td>
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="ProductId" value="@item.Product.Id" />
                                        <button type="submit" class="btn btn-danger">
                                            Sil
                                            <i class="fa fa-times fa-fw"></i>
                                        </button>
                                        </form>
                                </td>
                            </tr>
                        }
              </tbody>
        </table>
    </div>
</div>
        <div class="com-md-4">
            <div>
                <h4>Sepet Toplamı</h4>
            </div>
            <table class="table">
    <tr>
                    <th>Aratoplam</th>
                    <td>@Model.TotalPrice().ToString("c")</td>
    </tr>
                <tr>
                    <td>Kargo</td>
                    <td>@(Model.TotalPrice() > 999 ? "Ücretsiz" : "69₺")</td>
                </tr>
                <tr>
                    <th>Sipariş Toplamı</th>
                    
                    <td>
                        @(Model.TotalPrice() > 999 ? Model.TotalPrice().ToString("c") : (Model.TotalPrice() +69).ToString("c"))

                    </td>
                   
                </tr>
            </table>
        </div>
    </div>
</div>

